# ============================================================
# Global environment for all MediNote services
# Copy to .env and fill in secrets.
# ============================================================

# ------------------------------------------------------------
# Database (shared)
# ------------------------------------------------------------
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/medinote

# ------------------------------------------------------------
# Core service URLs (local)
# ------------------------------------------------------------
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:4173
STT_SERVER_URL=http://localhost:8002
VITE_API_URL=http://localhost:8000
VITE_CHATBOT_API_URL=http://localhost:8001
VITE_OCR_API_URL=http://localhost:8003

# ------------------------------------------------------------
# OpenAI
# ------------------------------------------------------------
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Models (override if needed)
CHATBOT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large
OCR_GPT_MODEL=gpt-4.1-mini
OCR_LANG=korean
OCR_DEVICE=cpu

# ------------------------------------------------------------
# LLM service (vector DB, reranker, tracing)
# ------------------------------------------------------------
CHROMA_DB_DIR=./chroma_db
CHROMA_DISEASE_COLLECTION=disease
CHROMA_DRUG_COLLECTION=drug
CHROMA_INTERACTION_COLLECTION=interaction
COHERE_API_KEY=
COHERE_RERANK_MODEL=rerank-multilingual-v3.0
TAVILY_API_KEY=
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=medinote-chatbot
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
HF_TOKEN=
BACKEND_BASE_URL=http://localhost:8000
LLM_DEFAULT_USER_ID=1
DEFAULT_USER_ID=1
